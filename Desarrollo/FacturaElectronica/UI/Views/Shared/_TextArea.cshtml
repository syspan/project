@using Syspan.Admin.Properties

<link rel="stylesheet" href="~/Content/assets/plugins/bootstrap-summernote/summernote.css">
<link rel="stylesheet" href="~/Content/assets/plugins/bootstrap-summernote/summernote-bs3.css">
<!-- BEGIN BASIC WYSIWYG -->
<div class="grid">
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">
                    <i class="fa fa-align-left"></i>
                    <span class="grid-title">@Resources.ClienteModel_Observacion</span>
                    <div class="pull-right grid-tools">
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="grid-body">
                    <div id="summernote"></div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- END BASIC WYSIWYG -->
