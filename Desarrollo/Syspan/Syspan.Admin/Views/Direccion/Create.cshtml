@using System.Web.UI.WebControls
@model Syspan.Admin.Models.Views.DireccionModel

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<!-- BEGIN CONTENT -->

    <!-- BEGIN MAIN CONTENT -->
    <section class="content">
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="grid">
                    <div class="grid-header">
                        <i class="fa fa-align-left"></i>
                        @*<span class="grid-title">Principal</span>*@

                        <div class="pull-right grid-tools">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                            <a href="@Url.Action("Index", "Cliente")">
                                <button class="btn btn-default" type="button">Cancelar</button>
                            </a>
                            <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                            <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                            <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="grid-body">
                        <fieldset>
                            @*<legend>Principal</legend>*@
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.Descripcion)
                                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.Numero)
                                    @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.IdComuna)
                                    @Html.DropDownListFor(model => model.IdComuna, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdComuna, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.IdProvincia)
                                    @Html.DropDownListFor(model => model.IdProvincia, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdProvincia, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.IdRegion)
                                    @Html.DropDownListFor(model => model.IdRegion, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdRegion, "", new { @class = "text-danger" })
                                </div>
                              
                            </div>


                        </fieldset>
                    </div>

                </div>
            }
        </div>

    </section>
    <!-- END MAIN CONTENT -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


