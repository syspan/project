@using System.Web.UI.WebControls
@model Syspan.Admin.Models.Views.DireccionModel

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<!-- BEGIN CONTENT -->

<!-- BEGIN MAIN CONTENT -->

<section class="content">
        <div class="col-md-12">
        @using (Html.BeginForm("Create", "Direccion", FormMethod.Post, new { id = "frmCreateDireccion" }))
        {
                @Html.AntiForgeryToken()
                <div class="grid">
                    <div class="grid-header">
                        <i class="fa fa-align-left"></i>
                        <span class="grid-title">Agregar</span>

                        <div class="pull-right grid-tools">
                            <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="form-horizontal" style="padding: 25px;">
                                <div class="form-group">
                                 @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                                   <div class="col-md-10">
                                     @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control focus" })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IdComuna, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.IdComuna, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdComuna, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IdProvincia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.IdProvincia, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdProvincia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IdRegion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.IdRegion, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdRegion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                    </div>
                     <div class="modal-footer">
                        <button class="btn" data-dismiss="modal">Cancel</button>
                        <input class="btn btn-primary" type="submit" value="Add" />
                    </div>
                </div>
            }
        </div>

    </section>
    <!-- END MAIN CONTENT -->




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
