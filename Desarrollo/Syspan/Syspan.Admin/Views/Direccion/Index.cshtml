@model IEnumerable<Syspan.Admin.Models.Views.DireccionModel>

@{
    ViewBag.Title = "Index";
    Layout = null;
}


@*@Html.ActionLink("Create New", "Create")*@
    <!-- BEGIN CONTENT HEADER -->

<!-- END CONTENT HEADER -->
<!-- BEGIN MAIN CONTENT -->
<section class="content">
    <div class="row">
        <!-- BEGIN BASIC DATATABLES -->
        <div class="col-md-12">
            <div class="grid no-border">
                <div class="grid-header">
                    <i class="fa fa-table"></i>
                    <span class="grid-title">Direcciones</span>
                    <div class="pull-right grid-tools">
                        <a href="@Url.Action("Create", "Direccion")">
                            <button type="button" class="btn btn-default">
                                <i class="fa fa-edit"></i> Agregar
                            </button>
                        </a>
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                      
                    </div>
                </div>
                <div class="grid-body">
                    <table id="dataTables1" class="table table-hover display" cellspacing="0" width="100%">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Numero)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.IdComuna)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdProvincia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdRegion)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Numero)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdComuna)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProvincia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdRegion)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- END MAIN CONTENT -->
</section>
<!-- END CONTENT -->