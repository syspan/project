                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                                <div class="form-group voffset1">
                                    <div class="col-sm-12" style="margin-top: 50px">
                                        @Html.Partial("_TextArea")
                                    </div>
                                </div>
                                <div class="form-group voffset1">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(model => model.SaldoMax)
                                        @Html.TextBoxFor(model => model.SaldoMax, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SaldoMax, "", new { @class = "text-danger" })
                                    </div>
                                </div>
