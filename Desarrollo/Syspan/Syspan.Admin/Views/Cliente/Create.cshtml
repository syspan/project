@using System.Web.UI.WebControls
@model Syspan.Admin.Models.Views.ClienteModel

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<!-- BEGIN CONTENT -->
<aside class="right-side">
    <!-- BEGIN CONTENT HEADER -->
    <section class="content-header">
        <i class="fa fa-align-left"></i>
        <span>Agregar Cliente</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li><a href="@Url.Action("Index", "Cliente")">Clientes</a></li>
            <li class="active">Agregar</li>
        </ol>
    </section>
    <!-- END CONTENT HEADER -->
    <!-- BEGIN MAIN CONTENT -->
    <section class="content">
        <div class="col-md-12">
            @using (Html.BeginForm())
                        {
    @Html.AntiForgeryToken()
                            <div class="grid">
                                <div class="grid-header">
                                    <i class="fa fa-align-left"></i>
                                    @*<span class="grid-title">Principal</span>*@
                  
                                    <div class="pull-right grid-tools">
                                        <button class="btn btn-primary" type="submit">Guardar</button>
                                        <a href="@Url.Action("Index", "Cliente")">
                                            <button class="btn btn-default" type="button">Cancelar</button>
                                        </a>
                                       
                                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                                <div class="grid-body">
                      
                               
                          
                                    <fieldset>
                                        @*<legend>Principal</legend>*@
                                        <div class="form-group">
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.Rut)
                                                @Html.TextBoxFor(model => model.Rut, new { @class = "form-control", placeholder="XX.XXX.XXX-X" } )
                                                @Html.ValidationMessageFor(model => model.Rut, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.Memotecnico)
                                                @Html.TextBoxFor(model => model.Memotecnico, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Memotecnico, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.Nombre)
                                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.NombreFantasia)
                                                @Html.TextBoxFor(model => model.NombreFantasia, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.NombreFantasia, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.IdGiro)
                                                @Html.DropDownListFor(model => model.IdGiro, null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.IdGiro, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.IdReparto)
                                                @Html.DropDownListFor(model => model.IdReparto, null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.IdReparto, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.IdFormaPago)
                                                @Html.DropDownListFor(model => model.IdFormaPago, null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.IdFormaPago, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.IdEstado)
                                                @Html.DropDownListFor(model => model.IdEstado, null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.Email)
                                                @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group voffset1">
                                            <div class="col-sm-3">
                                                @Html.LabelFor(model => model.SaldoMax)
                                                @Html.TextBoxFor(model => model.SaldoMax, null, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.SaldoMax, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group voffset1">
                                            <div class="col-sm-12" style="margin-top: 50px">
                                                @*<div class="row">*@
                                                    @*<div class="col-md-offset-2 col-md-10">*@
                                                        @{ Html.RenderAction("Index", "Direccion"); }
                                                    @*</div>*@
                                                @*</div>*@

                                            </div>
                                        </div>
                                        <div class="form-group voffset1">
                                            <div class="col-sm-12" style="margin-top: 50px">
                                                @Html.Partial("_TextArea")
                                            </div>
                                        </div>
                                   </fieldset>
                                </div>
               
                            </div>
              }
         </div>   
    
     </section>
        <!-- END MAIN CONTENT -->
</aside>
   @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<div>
        @Html.ActionLink("Back to List", "Index")
    </div>


