@using Syspan.Admin.Properties
@model IEnumerable<Syspan.Admin.Models.Views.ClienteModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

<!-- BEGIN CSS PLUGIN -->
<link rel="stylesheet" href="~/Content/assets/plugins/pace/pace-theme-minimal.css">
<link rel="stylesheet" href="~/Content/assets/plugins/jquery-datatables/css/dataTables.bootstrap.css">
<!-- END CSS PLUGIN -->


<!-- BEGIN CONTENT -->
<aside class="right-side">
    <!-- BEGIN CONTENT HEADER -->
    <section class="content-header">
        <i class="fa fa-table"></i>
        <span>Clientes</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li><a href="@Url.Action("Index", "Cliente")">Clientes</a></li>
        </ol>
        <p>
         

            @*@Html.ActionLink("Create New", "Create")*@
            
            <a href="@Url.Action("Create", "Cliente")">
                <button type="button" class="btn btn-default">
                    <i class="fa fa-edit"></i> Agregar
                </button>
            </a>
        </p>
    </section>
    <!-- END CONTENT HEADER -->
    <!-- BEGIN MAIN CONTENT -->
    <section class="content">
        <div class="row">
            <!-- BEGIN BASIC DATATABLES -->
            <div class="col-md-12">
                <div class="grid no-border">
                    <div class="grid-header">
                        <i class="fa fa-table"></i>
                        <span class="grid-title">Clientes</span>
                        <div class="pull-right grid-tools">
                            <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                            <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                            <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="grid-body">
                        <table id="dataTables1" class="table table-hover display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rut)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Memotecnico)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdGiro)
                                    </th>
                                    <th>
                                        @Resources.ClienteModel_List_Alias
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdEstado)
                                    </th>
                                    <th>
                                        @Resources.ClienteModel_List_ZReparto
                                    </th>
                                    <th>
                                       @Resources.ClienteModel_List_FPago
                                    </th>
                                    <th>
                                       @Resources.ClienteModel_List_Saldo
                                    </th>
                                    <th style="width: 49px;"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rut)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Memotecnico)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Giro.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreFantasia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClienteEstado.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RepartoZona.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FormaDePago.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SaldoMax)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Cliente", new { id = item.Rut })">
                                                <i class="fa fa-pencil bg-blue action"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Cliente", new { id = item.Rut })" onclick="return confirm('Estas seguro de eliminar el cliente?')">
                                                <i class="fa fa-times bg-red action"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- END MAIN CONTENT -->
    </section>
    <!-- END CONTENT -->

</aside>